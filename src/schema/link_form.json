{
  "$schema": "http://json-schema.org/draft-03/schema#",
  "id": "http://www.popoloproject.com/schemas/link.json#",
  "title": "Link",
  "description": "A url describing the current object",
  "type": "object",
  "properties": {
    "url": {
      "attrs": {
        "placeholder": "The url"
      },
      "type": "string",
      "format": "uri",
      "title": "A URL"
    },
    "note": {
      "attrs": {
        "placeholder": "A note, e.g. 'Wikipedia page'"
      },
      "type": "string",
      "title": "Note"
    },
    "field": {
      "attrs": {
        "placeholder": "Field of this data that the url link to"
      },
      "type": "string",
      "title": "Field Cited"
    }
  },
  "required": []
}
